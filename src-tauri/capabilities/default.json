{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "path:default",
    "window:default",
    "window:allow-start-dragging",
    "window:allow-set-title",
    "window:allow-is-maximized",
    "window:allow-minimize",
    "window:allow-maximize",
    "window:allow-unmaximize",
    "window:allow-close",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://raw.githubusercontent.com/ExpTechTW/*"
        },
        {
          "url": "https://lb-*.exptech.com.tw"
        },
        {
          "url": "https://api-*.exptech.com.tw"
        }
      ]
    },
    "fs:allow-read-file",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPCONFIG",
        "$APPCONFIG/*"
      ]
    }
  ]
}