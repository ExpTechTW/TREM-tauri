{
  "productName": "TREM Tauri",
  "version": "0.0.0",
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "TREM Tauri | 臺灣即時地震監測",
        "width": 1200
      }
    ]
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "./assets/TOS",
    "targets": "all",
    "windows": {
      "wix":{
        "language": "zh-TW"
      },
      "nsis": {
        "installMode": "currentUser",
        "installerIcon": "icons/icon.ico",
        "languages": [
          "English",
          "TradChinese",
          "Japanese"
        ],
        "sidebarImage": "./assets/sidebar.bmp"
      }
    }
  },
  "identifier": "tauri.trem.tw.com.exptech",
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "quiet",
          "short": "q"
        }
      ]
    }
  }
}